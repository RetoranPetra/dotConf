#!/bin/zsh
#if [ -z "${WAYLAND_DISPLAY}" ] && [ "${XDG_VTNR}" -eq 1 ]; then
if [ -z "${WAYLAND_DISPLAY}" ]; then
  echo "No desktops detected, going ahead!"
  TTY=$(ps -p $$ -o tty=)
  if [[ $TTY == "tty3" ]]; then
    echo "Starting Sway"
    tmux-detatch sway "source ~/.scripts/sway/swayLaunch.zsh"
  elif [[ $TTY == "tty2" ]]; then
    echo "Starting Plasma"
    tmux-detatch plasma "source startplasma-wayland"
  elif [[ $TTY == "tty1" ]]; then
    echo "Starting Hyprland"
    tmux-detatch hyprland "source ~/.config/hypr/scripts/hyprLaunch.zsh"
  else
    echo "None selected!"
    echo $TTY
  fi
fi
